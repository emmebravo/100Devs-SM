<%- include('partials/header') -%>
<body>
  <%- include('partials/navbar') %>
  <div class="main container">
    <h1><%=user.userName%>'s Profile</h1>
    <div class="profile grid">
      <div class="form-control">
        <form method="POST" enctype="multipart/form-data" action="posts/createPost">
            <input type="text" id="title" name="title" placeholder="title">
            <input type="textarea" id="caption" name="caption" placeholder="caption">
            <label for="imgUpload" class="form-label">Image</label>
            <input type="file" id="imageUpload" name="file">
            <button type="submit" class="btn" value="submit">Submit</button>
        </form>
      </div>
      <div class="posts">
        <h2>Posts</h2>
        <ul>
          <% for (let i=0; i < posts.length; i++) {%>
          <li><a href="/posts/<%= posts[i]._id %>"><img class="img-fluid" src="<%= posts[i].image%>"></a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
</body>
</html>